<% form_tag do %>
<dl>
<div class="login-panel">
	<dt><label for="name">User Name:</label></dt>
	<dd><%= text_field_tag :name, params[:name] %></dd>		
	<dt><label for="password">Password:</label></dt>
	<dd><%= password_field_tag :password, params[:password] %>
	<span><a href="#">Forgotten password?</a></span>
	</dd>
	<dd><%= submit_tag "Login" %><dd>
</div>
<dl>
<% end %>